@model Blood_Donor_App_v4.Models.BloodRider

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="relative bg-gray-50 overflow-hidden" x-data="{open: false}">
	<div class="max-w-7xl mx-auto">




		<div class="relative pt-6 px-4 sm:px-6 lg:px-8">
			<nav class="relative flex items-center justify-between sm:h-10 lg:justify-start" aria-label="Global">
				<div class="flex items-center flex-grow flex-shrink-0 lg:flex-grow-0">
					<div class="flex items-center justify-between w-full md:w-auto">
						<a asp-controller="Home" asp-action="Index">
							<!-- Name change -->
							<span class="sr-only">Blood Donor</span>
							<img class="h-8 w-auto sm:h-10" src="~/svg/logo.svg">
						</a>

					</div>

				</div>
			</nav>
		</div>


	</div>




	<div class="relative bg-gray-50 overflow-hidden my-5">


		<main class="mt-16 mx-auto max-w-7xl px-4 sm:mt-24">
			<div class="text-center">
				<h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
					<span class="block xl:inline">Want to be a</span>
					<span class="block text-rose-600 xl:inline">Blood Rider</span>
				</h1>
				<p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">The best among human is the one who helps others. You can't buy a life for someone with money, But you can help others in saving life. A man who saves one life saves mankind. You can be the reason for a smile on someone's face.</p>
				<div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
					<div class="rounded-md shadow">
						<button x-on:click="open = true" type="button" href="#" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-rose-600 hover:bg-rose-700 md:py-4 md:text-lg md:px-10">Register As a Rider </button>
					</div>
					<a asp-controller="Home" asp-action="Index" type="button" class="inline-flex ml-5 items-center px-2.5 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Go Back</a>


					<div x-show="open" x-cloak class="fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
						<div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
							<div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>

							<!-- This element is to trick the browser into centering the modal contents. -->
							<span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
							<div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">

								<form asp-action="Create" class="space-y-6" method="post">

									<div>
										<label class="block text-sm font-medium text-gray-700">Email </label>
										<div class="mt-1">
											<input asp-for="Email" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
										</div>
										<span asp-validation-for="Email" class="text-red-500"></span>
									</div>

									<div>
										<label class="block text-sm font-medium text-gray-700">Name</label>
										<div class="mt-1">
											<input asp-for="Name" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
										</div>
										<span asp-validation-for="Name" class="text-red-500"></span>
									</div>

									<div>
										<label class="block text-sm font-medium text-gray-700">Phone Number</label>
										<div class="mt-1">
											<input asp-for="PhoneNumber" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
										</div>
										<span asp-validation-for="PhoneNumber" class="text-red-500"></span>
									</div>


@*									<fieldset class="mt-4">

										<div class="space-y-4">

											<label for="yes" class="ml-3 block text-sm font-medium text-gray-700"> Do you own a vehicle?</label>
											<div class="flex items-center">
												<input id="yes" name="notification-method" type="radio" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300">
												<label for="yes" class="ml-3 block text-sm font-medium text-gray-700"> Yes </label>
											</div>

											<div class="flex items-center">
												<input id="no" name="notification-method" type="radio" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300">
												<label for="no" class="ml-3 block text-sm font-medium text-gray-700">No </label>
											</div>
										</div>
									</fieldset>*@
									<div>
										<label class="block text-sm font-medium text-gray-700">Address</label>
										<div class="mt-1">
											<input asp-for="Address" type="text" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
										</div>
										<span asp-validation-for="Address" class="text-red-500"></span>
									</div>

									<div>
										<label class="block text-sm font-medium text-gray-700">Has Vehicle?</label>
										<div class="mt-1">
											<input asp-for="HasVehicle" checked >
										</div>
										<span asp-validation-for="HasVehicle" class="text-red-500"></span>
									</div>


									<div class="mt-5 sm:mt-6 sm:grid sm:grid-cols-2 sm:gap-3 sm:grid-flow-row-dense">
										<button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-rose-400 text-base font-medium text-white hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:col-start-2 sm:text-sm">Send Request</button>
										<button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:col-start-1 sm:text-sm" x-on:click="open=false">Cancel</button>
									</div>
								</form>
							</div>
						</div>
					</div>




				</div>
			</div>
		</main>
	</div>




	<div class="bg-gray-50">
		<!-- Header -->
		<div class="relative pb-32 bg-gray-100">
			@* <div class="absolute inset-0">
			<img class="w-full h-full object-cover" src="~/svg/bg.svg" alt="">
			<div class="absolute inset-0 bg-gray-800 mix-blend-multiply" aria-hidden="true"></div>
			</div>*@
			<div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
				<h1 class="text-4xl font-extrabold tracking-tight text-rose-500 md:text-5xl lg:text-6xl">About Blood Rider</h1>
				<p class="mt-6 max-w-3xl text-xl text-gray-800">
					Blood donation is a selfless act that saves lives. Every day, patients in hospitals and emergency rooms across the country rely on blood transfusions to survive. However, with a limited supply of blood, it's crucial that individuals take the time to donate blood and help ensure that there is a steady supply of this life-saving resource. But in the time of emergency, sometimes it become harder for donors to come. This is where Blood Riders come in
				</p>
			</div>
		</div>

		<!-- Overlapping cards -->
		<section class="-mt-32 max-w-7xl mx-auto  z-10 pb-32 px-4 sm:px-6 lg:px-8" aria-labelledby="contact-heading">
			<h2 class="sr-only" id="contact-heading">Contact us</h2>
			<div class="grid grid-cols-1 gap-y-20 lg:grid-cols-3 lg:gap-y-0 lg:gap-x-8">
				<div class="flex flex-col bg-white rounded-2xl shadow-xl">
					<div class="flex-1 relative pt-16 px-6 pb-8 md:px-8">
						<div class="absolute top-0 p-5 inline-block bg-rose-400 rounded-xl shadow-lg transform -translate-y-1/2">
