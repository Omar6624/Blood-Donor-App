@using Microsoft.AspNetCore.Identity
@*@model  IEnumerable<Blood_Donor_App_v4.Areas.Identity.Pages.Account.RegisterModel>*@
@model IEnumerable<Blood_Donor_App_v4.Models.DonorOtherInfo>
@*@model Blood_Donor_App_v4.Areas.Identity.Pages.Account.RegisterModel*@


@{
    ViewData["Title"] = "Seach";
}


<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <img class="mx-auto h-12 w-auto" src="/svg/logo.svg" alt="Donor">
      <h2 class="mt-6 text-center text-3xl font-extrabold text-rose-500">Find Donor</h2>
    </div>
    <form class="mt-8 space-y-6" asp-action="Index" method="get">
      <input type="hidden" name="remember" value="true">
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label class="sr-only">Address</label>
                    <input name="SearchString" value="@ViewData["SearchString"]" type="text" autocomplete="address" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-rose-400 focus:border-rose-400 focus:z-10 sm:text-sm" placeholder="Address">
        </div>
      </div>
       <div class="rounded-md shadow-sm -space-y-px">
                <label class="block text-sm font-medium text-gray-700">BloodType</label>
                <select value="@ViewData["SearchType"]" name="SearchType" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-rose-400 focus:border-rose-500 sm:text-sm rounded-md">
                    <option selected>A+</option>
                    <option>A-</option>
                    <option>B+</option>
                    <option>B-</option>
                    <option>AB+</option>
                    <option>AB-</option>
                    <option>O+</option>
                    <option>O-</option>

                </select>
            </div>
      <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-rose-400 hover:bg-rose-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-400">
          Search
        </button>
      </div>
    </form>
     
  </div>
</div>


<div class="flex flex-col pt-6 max-w-screen-xl mx-auto ">

    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
            <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model=>model.Name)</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model=>model.Email)</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model=>model.Address)</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model=>model.BloodType)</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model=>model.Gender)</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@Html.DisplayNameFor(model=>model.PhoneNumber)</th>
                            <th scope="col" class="relative px-6 py-3">
                                <span class="sr-only">Edit</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr class="bg-white">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@Html.DisplayFor(ModelItem=>item.Name)</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@Html.DisplayFor(ModelItem=>item.Email)</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@Html.DisplayFor(ModelItem=>item.Address)</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@Html.DisplayFor(ModelItem=>item.BloodType)</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@Html.DisplayFor(ModelItem=>item.Gender)</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@Html.DisplayFor(ModelItem=>item.PhoneNumber)</td>

                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a href="#" class="text-rose-400 hover:text-rose-700">Send</a>
                            </td>
                        </tr>
                            
                        }

                       

                        
                    </tbody>
                </table>


            </div>

                <div class="flex flex-row pr-3.5 pt-3.5" x-data="{ open: false }">
                    <button onclick="location.href='@Url.Action("Index", "Home")'" type="button" class="inline-flex items-center p-2 border border-transparent rounded-full shadow-sm text-white bg-rose-400 hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-400  ">
                            <!-- Heroicon name: outline/plus-sm -->
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                        </svg>

                    </button>

                     <button x-on:click="open = true" type="button" class="inline-flex ml-auto items-center p-2 border border-transparent rounded-full shadow-sm text-white bg-rose-400 hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-400  ">
                        Send Request
                    </button>

                    <div x-show="open" class="fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
                <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                    <!--
                      Background overlay, show/hide based on modal state.

                      Entering: "ease-out duration-300"
                        From: "opacity-0"
                        To: "opacity-100"
                      Leaving: "ease-in duration-200"
                        From: "opacity-100"
                        To: "opacity-0"
                    -->
                    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>

                    <!-- This element is to trick the browser into centering the modal contents. -->
                    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

                    <!--
                      Modal panel, show/hide based on modal state.

                      Entering: "ease-out duration-300"
                        From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                        To: "opacity-100 translate-y-0 sm:scale-100"
                      Leaving: "ease-in duration-200"
                        From: "opacity-100 translate-y-0 sm:scale-100"
                        To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                    -->
                    <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">

                            <form asp-action="Mail" asp-controller="DonorSearch" class="space-y-6" method="get">

                                <div>
                                    <label class="block text-sm font-medium text-gray-700"> DonorrEmail </label>
                                    <div class="mt-1">
                                        <input name="DonorEmail" type="text"   value="@foreach(var item in Model){ @Html.DisplayFor(ModelItem=>item.Email)}" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700"> BloodType </label>
                                    <div class="mt-1">
                                        <input name="DonorBlood" type="text"   value="@ViewData["SearchType"]"  readonly required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                    </div>
                                </div>

                                <div>
                                    <label  class="block text-sm font-medium text-gray-700"> Your Location </label>
                                    <div class="mt-1">
                                        <input  name="UserLoc" type="text"  required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                    </div>
                                </div>

                                <div>
                                    <label  class="block text-sm font-medium text-gray-700">By When you need the blood</label>
                                    <div class="mt-1">
                                        <input name="UserBlood" type="text" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700">Your Contact Info</label>
                                    <div class="mt-1">
                                        <input name="UserNumber" type="text" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                    </div>
                                </div>

                                <div class="mt-5 sm:mt-6 sm:grid sm:grid-cols-2 sm:gap-3 sm:grid-flow-row-dense">
                                    <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-rose-400 text-base font-medium text-white hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:col-start-2 sm:text-sm">Send Request</button>
                                    <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:col-start-1 sm:text-sm" x-on:click="open=false">Cancel</button>
                                </div>
                            </form>
                    </div>
                </div>
            </div>
                </div>


        </div>
    </div>
</div>

